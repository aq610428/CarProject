<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/top_custormer" />

    <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
        android:id="@+id/swipeToLoadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:swipe_style="classic">

        <include
            android:id="@id/swipe_refresh_header"
            layout="@layout/layout_google_hook_header" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:background="@mipmap/icon_bg_main"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/text_car"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center|left"
                        android:text="总在线车辆"
                        android:textColor="#BED4FF"
                        android:textSize="@dimen/ctv_sizen_13" />

                    <TextView
                        android:id="@+id/text_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_car"
                        android:gravity="center|left"
                        android:paddingTop="5dp"
                        android:text="0 台"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/ctv_sizen_24"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:id="@+id/ll_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:text="我的车辆"
                                android:textColor="#BED4FF"
                                android:textSize="@dimen/ctv_sizen_13" />

                            <TextView
                                android:id="@+id/text_couster"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:drawableLeft="@mipmap/ic_group_main"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:text="0"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/ctv_sizen_14" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_term"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:text="保养到期提醒"
                                android:textColor="#BED4FF"
                                android:textSize="@dimen/ctv_sizen_13" />

                            <TextView
                                android:id="@+id/text_master"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:drawableLeft="@mipmap/ic_list_main"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:text="0"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/ctv_sizen_14" />

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@color/colorWhite" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#F3F5F9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_tab1"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="预约"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/ctv_sizen_14"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/text_tab2"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:text="洗车"
                        android:textColor="@color/black58"
                        android:textSize="@dimen/ctv_sizen_14"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/text_tab3"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:text="保养"
                        android:textColor="@color/black58"
                        android:textSize="@dimen/ctv_sizen_14"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/text_tab4"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:text="维修"
                        android:textColor="@color/black58"
                        android:textSize="@dimen/ctv_sizen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_tab5"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:text="救援"
                        android:textColor="@color/black58"
                        android:textSize="@dimen/ctv_sizen_14"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#F3F5F9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <View
                            android:id="@+id/view1"
                            android:layout_width="25dp"
                            android:layout_height="1.5dp"
                            android:background="@color/colorAccent" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <View
                            android:id="@+id/view2"
                            android:layout_width="25dp"
                            android:layout_height="1.5dp"
                            android:background="@color/colorAccent"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <View
                            android:id="@+id/view3"
                            android:layout_width="25dp"
                            android:layout_height="1.5dp"
                            android:background="@color/colorAccent"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <View
                            android:id="@+id/view4"
                            android:layout_width="25dp"
                            android:layout_height="1.5dp"
                            android:background="@color/colorAccent"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="gone">

                        <View
                            android:id="@+id/view5"
                            android:layout_width="25dp"
                            android:layout_height="1.5dp"
                            android:background="@color/colorAccent"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />


                <com.car.notver.weight.NoDataView
                    android:id="@+id/mNoDataView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@id/swipe_load_more_footer"
            layout="@layout/layout_google_hook_footer" />
    </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>
</LinearLayout>