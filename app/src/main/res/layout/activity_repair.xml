<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@mipmap/icon_repair"
                android:orientation="vertical"
                android:padding="8dp">

                <RelativeLayout
                    android:id="@+id/rl_repair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@mipmap/icon_car_rep"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:text="贵BD3189"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/ctv_sizen_17"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/text_repair"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:drawableRight="@mipmap/icon_right_repil"
                        android:drawablePadding="6dp"
                        android:gravity="center|right"
                        android:text="张峰"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/ctv_sizen_15" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:text="最新里程"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_12" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/icon_squareness"
                    android:drawablePadding="6dp"
                    android:gravity="center|left"
                    android:hint="单行输入"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:text="备注"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_12" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/icon_squareness"
                    android:drawablePadding="6dp"
                    android:gravity="center|left"
                    android:hint="单行输入"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/ctv_sizen_14" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/icon_rectangle_repair"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:paddingLeft="13dp"
                android:text="会员已有套餐"
                android:textColor="@color/black33"
                android:textSize="@dimen/ctv_sizen_14"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/dive_line" />


            <TextView
                android:id="@+id/text_project"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:drawableRight="@mipmap/ic_right"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="请选择项目"
                android:textColor="@color/black33"
                android:textSize="@dimen/ctv_sizen_14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_commodity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:drawableRight="@mipmap/ic_right"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="请选择商品"
                android:textColor="@color/black33"
                android:textSize="@dimen/ctv_sizen_14"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dive_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/text_rmb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="40dp"
                android:text="￥"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/ctv_sizen_13" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/text_rmb"
                android:gravity="center|left"
                android:paddingLeft="2dp"
                android:text="300元"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/ctv_sizen_16"
                android:textStyle="bold" />


            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/Text_3377E1"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ctv_sizen_15" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>