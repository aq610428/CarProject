<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        app:hl_cornerRadius="3dp"
        app:hl_shadowBackColor="#fff"
        app:hl_shadowColor="#2A696969"
        app:hl_shadowLimit="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="2020年5月15日 09:00—18:00"
                    android:textColor="#212121"
                    android:textSize="@dimen/ctv_sizen_14" />

                <TextView
                    android:id="@+id/tv_make"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center|left"
                    android:text="保养"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/ctv_sizen_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/dive_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="车牌号码"
                            android:textColor="#212121"
                            android:textSize="@dimen/ctv_sizen_13" />

                        <TextView
                            android:id="@+id/tv_license"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:background="@color/colorWhite"
                            android:gravity="center|left"
                            android:text="粤B-157R9"
                            android:textColor="#929292"
                            android:textSize="@dimen/ctv_sizen_13" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="电话号码"
                            android:textColor="@color/black33"
                            android:textSize="@dimen/ctv_sizen_13" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:background="@color/colorWhite"
                            android:gravity="center|left"
                            android:text="18988246540"
                            android:textColor="#929292"
                            android:textSize="@dimen/ctv_sizen_13" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_tab1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="维修方案"
                            android:textColor="@color/black33"
                            android:textSize="@dimen/ctv_sizen_13" />

                        <TextView
                            android:id="@+id/tv_parts"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:background="@color/colorWhite"
                            android:gravity="center|left"
                            android:text="18988246540"
                            android:textColor="#929292"
                            android:textSize="@dimen/ctv_sizen_13" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_tab2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="更换配件"
                            android:textColor="@color/black33"
                            android:textSize="@dimen/ctv_sizen_13" />

                        <TextView
                            android:id="@+id/tv_accessory"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:background="@color/colorWhite"
                            android:gravity="center|left"
                            android:text="18988246540"
                            android:textColor="#929292"
                            android:textSize="@dimen/ctv_sizen_13" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_tab3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="配件数量"
                            android:textColor="@color/black33"
                            android:textSize="@dimen/ctv_sizen_13" />

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:background="@color/colorWhite"
                            android:gravity="center|left"
                            android:text="18988246540"
                            android:textColor="#929292"
                            android:textSize="@dimen/ctv_sizen_13" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="完工时间"
                            android:textColor="@color/black33"
                            android:textSize="@dimen/ctv_sizen_13" />

                        <TextView
                            android:id="@+id/tv_finish"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:background="@color/colorWhite"
                            android:gravity="center|left"
                            android:text="18988246540"
                            android:textColor="#929292"
                            android:textSize="@dimen/ctv_sizen_13" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="现金"
                            android:textColor="@color/black33"
                            android:textSize="@dimen/ctv_sizen_13" />

                        <TextView
                            android:id="@+id/tv_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:background="@color/colorWhite"
                            android:gravity="center|left"
                            android:text="18988246540"
                            android:textColor="#929292"
                            android:textSize="@dimen/ctv_sizen_13" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="积分"
                            android:textColor="@color/black33"
                            android:textSize="@dimen/ctv_sizen_13" />

                        <TextView
                            android:id="@+id/tv_billing"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:background="@color/colorWhite"
                            android:gravity="center|left"
                            android:text="18988246540"
                            android:textColor="#929292"
                            android:textSize="@dimen/ctv_sizen_13" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dive_line" />

                <TextView
                    android:id="@+id/btn_code"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="收取积分"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/ctv_sizen_15" />

            </LinearLayout>


        </LinearLayout>


    </com.lihang.ShadowLayout>


</LinearLayout>