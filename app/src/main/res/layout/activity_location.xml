<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.amap.api.maps.MapView
        android:id="@+id/mMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/activity_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp">

        <com.car.notver.weight.ClearEditText
            android:id="@+id/et_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:background="@drawable/base_press"
            android:cursorVisible="true"
            android:hint="请输入店铺地址"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/ctv_sizen_14" />


        <TextView
            android:id="@+id/text_edition"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/store_shape"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/ctv_sizen_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tab"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <EditText
            android:id="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:background="@color/colorWhite"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="搜索"
            android:textColor="@color/black33"
            android:textSize="@dimen/ctv_sizen_13" />


        <TextView
            android:id="@+id/text_ok"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/ctv_sizen_14" />

    </RelativeLayout>


</RelativeLayout>