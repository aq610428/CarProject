<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_blg"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:background="@drawable/base_press"
                android:orientation="vertical"
                android:padding="8dp">

                <RelativeLayout
                    android:id="@+id/rl_repair"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="贵BD3189"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_14" />


                    <TextView
                        android:id="@+id/text_repair"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/ic_right"
                        android:drawablePadding="6dp"
                        android:gravity="center|right"
                        android:text="张峰"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_14" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dive_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="最新里程"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_14" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:drawablePadding="6dp"
                        android:gravity="center|right"
                        android:hint="请输入最新里程"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_14" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dive_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="备注"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_14" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:drawablePadding="6dp"
                        android:gravity="center|right"
                        android:hint="请输入备注"
                        android:textColor="@color/black33"
                        android:textSize="@dimen/ctv_sizen_14" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/base_press"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center|left"
                    android:paddingLeft="13dp"
                    android:text="会员已有套餐:"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="13dp"
                    android:gravity="center"
                    android:text="暂无套餐"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_project"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/base_press"
                android:drawableRight="@mipmap/ic_right"
                android:gravity="center|left"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:text="请选择项目"
                android:textColor="@color/black33"
                android:textSize="@dimen/ctv_sizen_14" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />


            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="30dp"
            android:text="合计: ￥300"
            android:textColor="@color/black33"
            android:textSize="@dimen/ctv_sizen_15" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/Text_3377E1"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="结算"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/ctv_sizen_15" />
    </RelativeLayout>

</RelativeLayout>