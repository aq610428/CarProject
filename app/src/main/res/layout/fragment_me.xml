<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/black33"
        android:textSize="@dimen/ctv_sizen_16"
        android:textStyle="bold" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_advoce" />

            </RelativeLayout>


            <TextView
                android:id="@+id/text_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/ic_assets"
                android:drawableRight="@mipmap/ic_right"
                android:drawablePadding="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="18dp"
                android:paddingRight="30dp"
                android:paddingBottom="18dp"
                android:text="我的门店"
                android:textColor="#2C2C2C"
                android:textSize="@dimen/ctv_sizen_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_means"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_lock"
                android:drawableRight="@mipmap/ic_right"
                android:drawablePadding="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="18dp"
                android:paddingRight="30dp"
                android:paddingBottom="18dp"
                android:text="重置密码"
                android:textColor="#2C2C2C"
                android:textSize="@dimen/ctv_sizen_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_personne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/ic_assets"
                android:drawableRight="@mipmap/ic_right"
                android:drawablePadding="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="18dp"
                android:paddingRight="30dp"
                android:paddingBottom="18dp"
                android:text="门店审核"
                android:textColor="#2C2C2C"
                android:textSize="@dimen/ctv_sizen_14"
                android:visibility="gone" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/dive_line"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_rescue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_massage"
                android:drawableRight="@mipmap/ic_right"
                android:drawablePadding="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="18dp"
                android:paddingRight="30dp"
                android:paddingBottom="18dp"
                android:text="消息中心"
                android:textColor="#2C2C2C"
                android:textSize="@dimen/ctv_sizen_14"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_service"
                android:drawableRight="@mipmap/ic_right"
                android:drawablePadding="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="18dp"
                android:paddingRight="30dp"
                android:paddingBottom="18dp"
                android:text="联系客服"
                android:textColor="#2C2C2C"
                android:textSize="@dimen/ctv_sizen_14"
                android:visibility="gone" />


            <TextView
                android:id="@+id/text_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_community"
                android:drawableRight="@mipmap/ic_right"
                android:drawablePadding="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="18dp"
                android:paddingRight="30dp"
                android:paddingBottom="18dp"
                android:text="加入社群"
                android:textColor="#2C2C2C"
                android:textSize="@dimen/ctv_sizen_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_team"
                android:drawableRight="@mipmap/ic_right"
                android:drawablePadding="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="18dp"
                android:paddingRight="30dp"
                android:paddingBottom="18dp"
                android:text="关于我们"
                android:textColor="#2C2C2C"
                android:textSize="@dimen/ctv_sizen_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/dive_line" />

            <TextView
                android:id="@+id/text_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:drawableLeft="@mipmap/icon_msg"
                android:drawableRight="@mipmap/ic_right"
                android:drawablePadding="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="18dp"
                android:paddingRight="30dp"
                android:paddingBottom="18dp"
                android:text="帮助中心"
                android:textColor="#2C2C2C"
                android:textSize="@dimen/ctv_sizen_14" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/next_shape"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/ctv_sizen_15" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>