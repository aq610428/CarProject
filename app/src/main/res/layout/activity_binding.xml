<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/icon_bind"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp"
            android:gravity="center|left"
            android:text="同城在线车辆"
            android:textColor="#BED4FF"
            android:textSize="@dimen/ctv_sizen_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="153893台"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/ctv_sizen_30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center|left"
            android:text="附近在线车辆"
            android:textColor="#BED4FF"
            android:textSize="@dimen/ctv_sizen_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="893台"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/ctv_sizen_16" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="#F3F5F9"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:text="选择以下平台绑定车主"
        android:textColor="#9E9E9E"
        android:textSize="@dimen/ctv_sizen_13" />


    <com.car.notver.weight.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/base_press1"
        android:gravity="center|left"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:hint="卡贝盒子"
        android:paddingLeft="10dp"
        android:textColor="#9E9E9E"
        android:textSize="@dimen/ctv_sizen_14" />

    <com.car.notver.weight.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorWhite"
        android:gravity="center|left"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:hint="请输入手机号码或邮箱"
        android:paddingLeft="10dp"
        android:textColor="@color/black33"
        android:textSize="@dimen/ctv_sizen_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/dive_line" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp">

        <com.car.notver.weight.ClearEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:layout_toLeftOf="@+id/btn_code"
            android:background="@color/colorWhite"
            android:gravity="center|left"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="@dimen/ctv_sizen_15" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/text_code"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/text_code"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/ctv_sizen_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/dive_line" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/next_shape"
        android:gravity="center"
        android:text="绑定"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/ctv_sizen_15" />
</LinearLayout>