<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/activity_title" />


    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        app:hl_cornerRadius="3dp"
        app:hl_shadowBackColor="#fff"
        app:hl_shadowColor="#2A696969"
        app:hl_shadowLimit="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/text_license"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="车牌号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ctv_sizen_14" />


                <EditText
                    android:id="@+id/et_license"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/text_license"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center|right"
                    android:hint="请您输入车牌号"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black7e"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/ctv_sizen_13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="车架号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ctv_sizen_14" />


                <EditText
                    android:id="@+id/et_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center|right"
                    android:hint="请您输入车架号"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black7e"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/ctv_sizen_13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="发动机号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ctv_sizen_14" />


                <EditText
                    android:id="@+id/et_engine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center|right"
                    android:hint="请您输入发动机号"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black7e"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/ctv_sizen_13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="初始里程"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ctv_sizen_14" />


                <EditText
                    android:id="@+id/et_oss"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center|right"
                    android:hint="请您输入初始里程"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black7e"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/ctv_sizen_13" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="累计里程"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ctv_sizen_14" />


                <EditText
                    android:id="@+id/et_oss_total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center|right"
                    android:hint="请您输入累计里程"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black7e"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/ctv_sizen_13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="车辆品牌型号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ctv_sizen_14" />


                <TextView
                    android:id="@+id/text_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="10dp"
                    android:gravity="center|right"
                    android:hint="请选择车辆品牌型号"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black7e"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/ctv_sizen_13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dive_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="备注"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ctv_sizen_14" />


                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="10dp"
                    android:gravity="center|right"
                    android:hint="请输入车辆备注"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black7e"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/ctv_sizen_13" />

            </RelativeLayout>

        </LinearLayout>
    </com.lihang.ShadowLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@mipmap/btn_sumber_mine"
        android:gravity="center"
        android:text="确认添加"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/ctv_sizen_14" />

</LinearLayout>