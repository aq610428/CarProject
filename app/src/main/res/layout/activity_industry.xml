<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/ic_industry" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/store_shape"
            android:gravity="center"
            android:text="上传道路运输许可证"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/ctv_sizen_14" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal">


            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="运输资质类型"
                android:textColor="@color/black6e"
                android:textSize="@dimen/ctv_sizen_15" />

            <TextView
                android:id="@+id/text_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorWhite"
                android:drawableRight="@mipmap/ic_right"
                android:hint="请选择行业资质"
                android:textColor="@color/black33"
                android:textSize="@dimen/ctv_sizen_14" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/next_shape"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/ctv_sizen_15" />

</LinearLayout>